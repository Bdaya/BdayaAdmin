#meetings
  .split-main
    .content.hidden-scroll
      %span.button.right
        = link_to 'Create', new_meeting_path
      %h1 Meetings

      %br

      .vertical-line

      .group
        .title Today
        -@meetings.each do |meeting|
          .meeting
            .datetime
              .time= meeting.time if meeting.time
              .date= meeting.date.to_date if meeting.date
            .circle
            %h2.name= meeting.title
            .location= meeting.location != '' ? meeting.location : "TBA"




  .split-side
    .topbar
      %span.back.fa.fa-angle-left.fa-2x.topbarButton

    .content.hidden-scroll
      %ul.nav.nav-tabs
        %li.active
          %a{:href=> '#info', :data=> {:toggle=> 'tab'}} Info
        %li
          %a{:href=> '#agenda', :data=> {:toggle=> 'tab'}} Agenda
        %li
          %a{:href=> "#minutes", :data=> {:toggle=> 'tab'}} Meeting Minutes

      .tab-content
        #agenda.tab-pane Agenda
        #minutes.tab-pane Meeting Minutes

        #info.tab-pane.active
          %h2 Weekly Meeting
          .row
            .col.col-xs-5
              .location GUC C3 205
              .date <strong> 9:00 AM </strong>
              .time 12/3/2014
            .col.col-xs-6.col-xs-offset-1
              %p This meeting is superduper awesome.

          .invites
            %h3 Invites
            .pp= image_tag 'pp.png', alt: 'logo'
            .pp= image_tag 'pp.png', alt: 'logo'
            .pp= image_tag 'pp.png', alt: 'logo'
            .pp= image_tag 'pp.png', alt: 'logo'
    

    .discussion.content.hidden-scroll
      .gap