-if @meeting != nil

  %ul.nav.nav-tabs
    %li.active
      %a{:href=> '#info', :data=> {:toggle=> 'tab'}} Info
    %li
      %a{:href=> '#agenda', :data=> {:toggle=> 'tab'}} Agenda
    %li
      %a{:href=> "#minutes", :data=> {:toggle=> 'tab'}} Meeting Minutes

  .tab-content
    #agenda.tab-pane
      %h2="Agenda"
      %span.fa.fa-edit.right{:data => {:toggle => 'modal', :target => '#agendaModal'}}
      -if @meeting.agenda == nil
        ="You haven't entered an Agenda yet!!"
      -else
        =@meeting.agenda

    #minutes.tab-pane
      %h2="Meeting Minutes"
      %span.fa.fa-edit.right{:data => {:toggle => 'modal', :target => '#minsModal'}}
      -if @meeting.meeting_minuts == nil
        ="You haven't entered meeting minutes yet!!"
      -else
        =@meeting.meeting_minuts      

    #info.tab-pane.active
      %span.fa.fa-edit.right{:data => {:toggle => 'modal', :target => '#updateModal'}}
      %h2= @meeting.title
      .row
        .col.col-xs-5
          .location= @meeting.location != '' ? @meeting.location : "TBA"
          .time= @meeting.date.to_date if @meeting.date
          .date= @meeting.time if @meeting.time
        .col.col-xs-6.col-xs-offset-1
          %p= @meeting.description

      .invites
        %h3 Invitees
        -@meeting.attendees.each do |a|
          .pp
            /{:data=>{:container=>"body", :toggle=>"popover", :placement=>"top",:animation=>"trigger", :content=>"#{render :partial => 'attendanceForm', :locals => {:@user => current_user}}"}} 
            - unless a.image.url == nil
              = image_tag a.image.url
            - else
              = image_tag "logo.png", alt: 'logo'
              %br
            =a.name
            .aten   
              -if(a.is_meeting_attendance(@meeting,"attended"))
                .attButton.greenFilled= link_to "AT", set_attendance_meeting_path(@meeting, :user_id => a.id, :attendance_status => "attended")
              -else
                .attButton.green= link_to "AT", set_attendance_meeting_path(@meeting, :user_id => a.id, :attendance_status => "attended")

              -if(a.is_meeting_attendance(@meeting,"absent"))
                .attButton.redFilled= link_to "AB", set_attendance_meeting_path(@meeting, :user_id => a.id, :attendance_status => "absent")
              -else
                .attButton.red= link_to "AB", set_attendance_meeting_path(@meeting, :user_id => a.id, :attendance_status => "absent")
                
              -if(a.is_meeting_attendance(@meeting,"excused"))
                .attButton.orangeFilled= link_to "EX", set_attendance_meeting_path(@meeting, :user_id => a.id, :attendance_status => "excused")
              -else
                .attButton.orange= link_to "EX", set_attendance_meeting_path(@meeting, :user_id => a.id, :attendance_status => "excused")
          %br      
          =a.name

    .discussion.content.hidden-scroll
      .gap


  #updateModal.modal.fade{:tabindex=>"-1", :role=>"dialog"}
    .modal-dialog
      .modal-content
        .modal-header
          %span.right.fa.fa-times.fa-2x{:data => {:dismiss => "modal"}}
          %h1 Update Meeting
        .modal-body
          = render :partial => 'form', :locals => {:@meeting => @meeting}

  #agendaModal.modal.fade{:tabindex=>"-1", :role=>"dialog"}
    .modal-dialog
      .modal-content
        .modal-header
          %span.right.fa.fa-times.fa-2x{:data => {:dismiss => "modal"}}
          %h1 Update Meeting
        .modal-body
          = render :partial => 'agendaForm', :locals => {:@meeting => @meeting}

  #minsModal.modal.fade{:tabindex=>"-1", :role=>"dialog"}
    .modal-dialog
      .modal-content
        .modal-header
          %span.right.fa.fa-times.fa-2x{:data => {:dismiss => "modal"}}
          %h1 Update Meeting
        .modal-body
          = render :partial => 'minsForm', :locals => {:@meeting => @meeting}
                  