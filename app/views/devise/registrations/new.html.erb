<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :phone %><br />
 <%= f.text_field :phone %></div>
 
  <div><%= f.label :semester %><br />
 <%= f.text_field :semester %></div>

   <div><%= f.label :faculty %><br />
 <%= f.text_field :faculty %></div>
   <div><%= f.label :tshirt_size %><br />
 <%= f.text_field :tshirt_size %></div>
   <div><%= f.label :address %><br />
 <%= f.text_area :address %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
