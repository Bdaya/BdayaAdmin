<%= form_for req ,:url => { :action => "update" } do |f| %>
	<tr>
		<th><%= if req.creator
					req.creator.name
				end %>
		</th>
		<th><%= req.request_type %></th>
		<th>
			<% if req.materials %>
			<ul><% (req.materials).each do |material|%>
		        	<li> <%= material %> </li>
		        <%- end %>
	       	</ul>
			<% else %>
			<%= f.label :No_materials %>
			<% end%>
		</th>
		<th><%= req.notes %></th>
		<th><%- if req.status %>
				<%=	req.roomnumber %> 
				<%- else %>
				<%= f.text_field :roomnumber , placeholder: "Enter Room No." %> 
				<%- end%>
		</th>
		<th><%= if req.status 
					"Submited"
				else
					f.submit "Submit Request"  
		end%></th>
	</tr>
<% end %>