#tasks
	.split-main
		.content.hidden-scroll
			%span.button.right{:data => {:toggle => 'modal', :target => '#createModal'}} Create
			%h1 Tasks
			%br
			
			.group
				.title Today

				-@pending_tasks.each do |task|	
					.task{:data => {:link => (url_for task)}}
						.status=#task.status
						%h2.name=task.title
						.date=task.deadline

				-@done_tasks.each do |task|	
					.task{:data => {:link => (url_for task)}}
						.status=#task.status
						%h2.name=task.title
						.date=task.deadline

				-@sent_tasks.each do |task|	
					.task{:data => {:link => (url_for task)}}
						.status=#task.status
						%h2.name=task.title
						.date=task.deadline




	.split-side
		.topbar
			%span.back.fa.fa-angle-left.fa-2x.topbarButton

		#details.content.hidden-scroll
			= render :partial => 'tasks/details', :locals => {:@task => @tasks.first}


#createModal.modal.fade{:tabindex=>"-1", :role=>"dialog"}
	.modal-dialog
		.modal-content
			.modal-header
				%span.right.fa.fa-times.fa-2x{:data => {:dismiss => "modal"}}
				%h1 Create Task
			.modal-body



