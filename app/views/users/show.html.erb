<p id="notice"> <%= notice %> </p>
<p> <img src= <%= @user.image%> , alt <%= @user.name%> => </p>
<p>
  <h5>Name:</h5>
  <%= @user.name%>
</p>

<p>
  <h5>Phone Number:</h5>
  <%= @user.phone %>
</p>

<p>
  <h5>Major:</h5>
  <%= @user.major %>
</p>

<p>
  <h5>Faculty:</h5>
  <%= @user.faculty %>
</p>

<p>
  <h5>Semester:</h5>
  <%= @user.semester %>
</p>

<p>
  <h5>Tshirt size:</h5>
  <%= @user.tshirt_size %>
</p>

<p>
  <h5>Address:</h5>
  <%= @user.address %>
</p>

<p>
  <h5>Commitee Status: </h5>
  <% if !@user.head_of_committee.blank? %>
    <b>Head of: </b> <%= @user.head_of_committee.title%>
  <% elsif !@user.vice_of_committee.blank? %>
    <b>Voice of: </b> <%= @user.vice_of_committee.title%>
  <% elsif !@user.member_of_committee.blank? %>
    <b>Member of: </b> <%= @user.member_of_committee.title%>
  <% else %>
    <p>Unknown</p>
  <% end %>
</p>

<p>
  <h5> Courses: </h5>
    <% if !@user.courses.blank? %>
      <% for course in @user.courses %>
        <%= link_to course.name , course_path(course) %> <br>
      <% end %>
    <% else %>
      <b>No Courses assgined</b>
    <% end %>
</p>

<p>
  <h3>Tasks:</h3>
    <h5>Created by Me</h5>
      <% if !@user.tasks.blank? %>
        <ul>
          <% for task in @user.tasks %>
            <li> <%= link_to task.title , task_path(task) %> <br> </li>
          <% end %>
        </ul>
      <% else %>
        <b>No Tasks Created yet</b>
      <% end %>
    <br>
    <h5>For me</h5>
      <% if !@user.tasks_responsible_for.blank? %>
        <% for task in @user.tasks_responsible_for %>
          <%= link_to task.title , task_path(task) %> <br>
        <% end %>
      <% else %>
        <b>No Tasks to do</b>
      <% end %>      
</p>

<p>
  <h3>Meetings:</h3>
    <h5>Created by Me</h5>
      <% if !@user.created_meetings.blank? %>
        <ul>
          <% for meeting in @user.created_meetings %>
            <li> <%= link_to meeting.title , meeting_path(meeting) %> <br> </li>
          <% end %>
        </ul>
      <% else %>
        <b>No Meetings have been Created yet</b>
      <% end %>
    <br>
    <h5>Invited To</h5>
      <% if !@user.attending_meetings.blank? %>
        <ul>
          <% for meeting in @user.attending_meetings %>
            <li> <%= link_to meeting.title , meeting_path(meeting) %> <br> </li>
          <% end %>
