          <%= link_to request.request_type , request_path(request) %> <br>
        <% end %>
      <% else %>
        <b>No Requests to check ..</b>
      <% end %>      
</p>

<p>
  <h3>Events:</h3>
    <h5>Created by Me</h5>
      <% if !@user.created_events.blank? %>
        <ul>
          <% for event in @user.created_events %>
            <li> <%= link_to event.title , event_path(event) %> <br> </li>
          <% end %>
        </ul>
      <% else %>
        <b>No Events have been Created yet</b>
      <% end %>
    <br>

    <h5>Managed by Me</h5>
      <% if !@user.managed_events.blank? %>
        <ul>
          <% for event in @user.managed_events %>
            <li> <%= link_to event.title , event_path(event) %> <br> </li>
          <% end %>
        </ul>
      <% else %>
        <b>No Events To manage</b>
      <% end %>
    <br>

    <h5>Invited To</h5>
